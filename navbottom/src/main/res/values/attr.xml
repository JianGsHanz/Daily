<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="QBottomTabLayout">

        <attr name="q_publishMode" format="enum">
            <enum name="COVER" value="1"/>
            <enum name="CENTER" value="2"/>
        </attr>

        <!-- tab -->
        <attr name="q_tab_padding"/>
        <attr name="q_tab_space_equal"/>
        <attr name="q_tab_width"/>
        <attr name="q_background" format="enum"/>

        <!-- title -->
        <attr name="q_textsize"/>
        <attr name="q_textSelectColor"/>
        <attr name="q_textUnselectColor"/>
        <attr name="q_textBold"/>
        <attr name="q_textAllCaps"/>
        <!-- 设置文字是否可见 -->
        <attr name="q_textVisible" format="boolean"/>
        <!-- 设置主题色 -->
        <attr name="q_themeColor" format="color"/>

        <!-- 设置icon宽度 -->
        <attr name="q_iconWidth" format="dimension"/>
        <!-- 设置icon高度 -->
        <attr name="q_iconHeight" format="dimension"/>
        <!-- 设置icon是否可见 -->
        <attr name="q_iconVisible" format="boolean"/>
        <!-- 设置icon与文字间距 -->
        <attr name="q_iconMargin" format="dimension"/>
        <!-- 发布按钮在中间的图片-->
        <attr name="q_centerPublishIcon" format="reference"/>

        <attr name="q_isWebIcon" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="mv_backgroundColor" format="color"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_cornerRadius" format="dimension"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_strokeWidth" format="dimension"/>
        <!-- 圆角边框颜色-->
        <attr name="mv_strokeColor" format="color"/>
        <!-- 圆角弧度是高度一半-->
        <attr name="mv_isRadiusHalfHeight" format="boolean"/>
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="mv_isWidthHeightEqual" format="boolean"/>
    </declare-styleable>

</resources>
